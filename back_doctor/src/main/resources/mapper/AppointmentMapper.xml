        <result column="be_appointment_id" property="beAppointmentId" />
        <result column="appointment_name" property="appointmentName" />
        <result column="be_appointment_name" property="beAppointmentName" />
        <result column="medical_record" property="medicalRecord" />
        <result column="prescription" property="prescription" />
        <result column="status" property="status" />
        <result column="appointment_time" property="appointmentTime" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, appointment_id, be_appointment_id, appointment_name, be_appointment_name, medical_record, prescription, status, appointment_time, create_time, update_time
    </sql>

</mapper>
